<div class="row mt-2 px-3">
    <div class="col py-4" >
        <% let productName =  item.name+".jpg"%>
        <%-console.log(productName)%>
            <a href="#"class="col text-center category_link px-5">
                <div class="category_display shadow" style="background-color: #e9eaec;">
                    <img src="/uploads/<%-productName%>" alt="<% item.name %>" width="500vw" height="500vw" style="image-resolution: 300dpi">
                </div>
                <figcaption style="text-align:left; color: #C0C0C0;"><%- item.quantity %></figcaption>
                <div class="pt-1"></div>
            </a>

    </div>
    <div class="col py-5 px-5" style="font-family:-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;" >
        <h2><b><%- item.name %></b></h2>
        <h5 style="padding-left: 10px ; ">Why <%- item.name %> <i class="bi bi-question-lg"></i></h5>
        <h6 class="py-2" ><i class="bi bi-pen">  </i><%- item.description %></h6>
        <div class="row py-5">
            <div class="col "style="text-align:center">
                <form action="/payment" method="get">
                    <button class="purchaseButton shadow" type="submit" name="id" value="<%- item.id %>">Buy now</button>
                    <label >Quantity</label>
                    <select name="quantity">
                        <% for(let i=1 ; i<=5 ; i++){%>
                            <option value="<%- i %>"><%- i %></option>
                        <% } %>
                    </select>
                </form>
            </div>
            <div class="col " style="text-align:center">
                    <form action="/add to cart" method="get">
                        <button class="purchaseButton shadow" name = "id" value="<%- item.id %>">
                            <%- (user !== 'undefined' && user.cart.includes(item.name)) ? 'Remove from cart' : 'Add to cart'%>
                            <i class="bi bi-cart-dash"></i>
                        </button>
                    </form>       
            </div>
            
        </div>
    </div>
</div>